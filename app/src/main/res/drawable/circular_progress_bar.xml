<?xml version="1.0" encoding="utf-8"?>
<rotate xmlns:android="http://schemas.android.com/apk/res/android"
    android:fromDegrees="270"
    android:toDegrees="270">

    <layer-list>

       <!--<item>
           <shape
               android:shape="rectangle"
               android:useLevel="true">
               <stroke android:color="#1f1f1f" android:width="7dp" />
               <corners android:radius="40dp"/>
           </shape>
       </item>-->

        <item>
            <shape
                android:shape="rectangle"
                android:useLevel="true">
                <corners android:radius="40dp" />
                <gradient
                    android:endColor="#0000ffff"
                    android:startColor="#FF0091BD"
                    android:centerColor="#FF0091BD"
                    android:type="sweep"
                    android:gradientRadius="200dp"
                    android:useLevel="true" />

                <size
                    android:width="170dp"
                    android:height="170dp" />
            </shape>
        </item>

        <item
            android:bottom="7dp"
            android:left="7dp"
            android:right="7dp"
            android:top="7dp">
            <shape
                android:shape="rectangle"
                android:useLevel="true">
                <corners android:radius="36dp" />
                <size
                    android:width="100dp"
                    android:height="100dp" />
                <solid android:color="@color/white" />
            </shape>
        </item>

        <item android:id="@android:id/progress">
            <shape
                android:innerRadiusRatio="2.5"
                android:shape="ring"
                android:thickness="8dp"
                android:useLevel="true">

                <gradient
                    android:angle="0"
                    android:endColor="#33d99f"
                    android:startColor="#33d99f"
                    android:type="sweep"
                    android:useLevel="true" />

            </shape>
        </item>
    </layer-list>

</rotate>