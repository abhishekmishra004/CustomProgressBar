<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ProgressBar
        android:id="@+id/bar1"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:layout_width="200dp"
        android:layout_height="10dp"
        android:layout_marginStart="-25dp"
        android:max="100"
        android:progressDrawable="@drawable/progress"
        app:layout_constraintStart_toEndOf="@id/gauge01"
        app:layout_constraintTop_toTopOf="parent" />


    <pl.pawelkleczkowski.customgauge.CustomGauge
        android:id="@+id/gauge01"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="-6dp"
        android:layout_marginTop="-6dp"
        android:rotation="270"
        app:gaugeEndValue="100"
        app:gaugePointEndColor="@color/teal_200"
        app:gaugePointStartColor="@color/black"
        app:gaugeStartAngle="0"
        app:gaugeStartValue="0"
        app:gaugeStrokeCap="ROUND"
        app:gaugeStrokeColor="@color/black"
        app:gaugeStrokeWidth="10dp"
        app:gaugeSweepAngle="-90"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ProgressBar
        android:id="@+id/bar4"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:layout_width="60dp"
        android:layout_height="10dp"
        android:layout_marginStart="-20dp"
        
        android:rotation="90"
        android:max="100"
        android:progressDrawable="@drawable/progress"
        app:layout_constraintStart_toStartOf="@id/gauge01"
        app:layout_constraintTop_toBottomOf="@id/gauge01" />


    <pl.pawelkleczkowski.customgauge.CustomGauge
        android:id="@+id/gauge04"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="-25dp"
        android:rotation="90"
        app:gaugeEndValue="100"
        app:gaugePointEndColor="@color/teal_200"
        app:gaugePointStartColor="@color/teal_200"
        app:gaugeStartAngle="0"
        app:gaugeStartValue="0"
        app:gaugeStrokeCap="ROUND"
        app:gaugeStrokeColor="@color/black"
        app:gaugeStrokeWidth="10dp"
        app:gaugeSweepAngle="90"
        app:layout_constraintStart_toStartOf="@id/bar1"
        app:layout_constraintTop_toBottomOf="@id/bar4" />


    <pl.pawelkleczkowski.customgauge.CustomGauge
        android:id="@+id/gauge02"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="-25dp"
        android:layout_marginTop="-6dp"
        android:rotation="270"
        app:gaugeEndValue="100"
        app:gaugePointEndColor="@color/teal_200"
        app:gaugePointStartColor="@color/teal_200"
        app:gaugeStartAngle="0"
        app:gaugeStartValue="0"
        app:gaugeStrokeCap="ROUND"
        app:gaugeStrokeColor="@color/black"
        app:gaugeStrokeWidth="10dp"
        app:gaugeSweepAngle="90"
        app:layout_constraintStart_toEndOf="@id/bar1"
        app:layout_constraintTop_toTopOf="parent" />

    <ProgressBar
        android:id="@+id/bar2"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:layout_width="60dp"
        android:layout_height="10dp"
        android:layout_marginStart="10dp"
        android:rotation="90"
        android:max="100"
        android:progressDrawable="@drawable/progress"
        app:layout_constraintStart_toStartOf="@id/gauge02"
        app:layout_constraintTop_toBottomOf="@id/gauge02" />


    <pl.pawelkleczkowski.customgauge.CustomGauge
        android:id="@+id/gauge03"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="-25dp"
        android:rotation="0"
        app:gaugeEndValue="100"
        app:gaugePointEndColor="@color/teal_200"
        app:gaugePointStartColor="@color/teal_200"
        app:gaugeStartAngle="0"
        app:gaugeStartValue="0"
        app:gaugeStrokeCap="ROUND"
        app:gaugeStrokeColor="@color/black"
        app:gaugeStrokeWidth="10dp"
        app:gaugeSweepAngle="90"
        app:layout_constraintStart_toEndOf="@id/bar1"
        app:layout_constraintTop_toBottomOf="@id/bar2" />

    <ProgressBar
        android:id="@+id/bar3"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:layout_width="200dp"
        android:layout_height="10dp"
        android:max="100"
        android:layout_marginStart="-25dp"
        android:layout_marginTop="-15dp"
        
        android:rotation="180"
        android:progressDrawable="@drawable/progress"
        app:layout_constraintStart_toEndOf="@id/gauge04"
        app:layout_constraintTop_toBottomOf="@id/gauge03" />

</androidx.constraintlayout.widget.ConstraintLayout>